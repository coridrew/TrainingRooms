<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Class="TrainingRooms.Admin.Controls.EventCardControl" 
             mc:Ignorable="d">
	<Border BorderThickness="1" Background="#FFAFE88F" Height="95" VerticalAlignment="Top" HorizontalAlignment="Left" Width="165" CornerRadius="5">
		<Grid Margin="5">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto"/>
				<RowDefinition/>
			</Grid.RowDefinitions>
			<Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5" Width="16" Height="16"/>
			<TextBlock TextWrapping="Wrap" Text="9:00 am - 5:00 pm" Margin="5,5,25.546,5" VerticalAlignment="Top"/>
			<TextBlock TextWrapping="Wrap" Text="Red Hat Enterprise Linux" Margin="5" Grid.Row="1" FontSize="16"/>
		</Grid>
	</Border>
</UserControl>
